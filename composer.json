{
    "name": "laraerp/nota-fiscal",
    "description": "Laraerp Nota Fiscal",
    "keywords": ["erp", "openerp", "erp php", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "laraerp/core": "dev-master",
        "jansenfelipe/nfephp-serialize": "1.0.*",
        "laraerp/cfops": "^1.0",
        "laraerp/ncms": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0"
    },
    "autoload": {
        "psr-4": {
            "Laraerp\\": "src/Laraerp"
        }
    },
    "scripts": {
        "post-install-cmd": [
          "php artisan vendor:publish --provider=\"Laraerp\\Providers\\NcmsServiceProvider\" --force",
          "php artisan vendor:publish --provider=\"Laraerp\\Providers\\CfopsServiceProvider\" --force"
        ],
        "post-update-cmd": [
          "php artisan vendor:publish --provider=\"Laraerp\\Providers\\NcmsServiceProvider\" --force",
          "php artisan vendor:publish --provider=\"Laraerp\\Providers\\CfopsServiceProvider\" --force"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
